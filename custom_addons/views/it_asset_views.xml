<odoo>
    <data>
        <record model="ir.ui.view" id="it_asset_form_view">
            <field name="name">it.asset.form</field>
            <field name="model">it.asset</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="asset_type"/>
                            <field name="serial_number"/>
                            <field name="purchase_date"/>
                            <field name="customer_id"/>
                            <field name="location"/>
                            <field name="active"/>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="it_asset_tree_view">
            <field name="name">it.asset.tree</field>
            <field name="model">it.asset</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="asset_type"/>
                    <field name="serial_number"/>
                    <field name="customer_id"/>
                    <field name="location"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="it_asset_action">
            <field name="name">Ã‰quipements Informatiques</field>
            <field name="res_model">it.asset</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>